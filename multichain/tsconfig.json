{
    "compilerOptions": {
        "outDir": "lib/",
        "lib": [
            "es2018",
            "es2017.object",
            "es2017"
        ],
        "typeRoots": [
          "node_modules/@0x/typescript-typings/types",
          "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}